{
  "name": "capitaine-flemme",
  "description": "Démonstration de l'automatisation des process de développement dans un projet web",
  "version": "0.1.0",
  "engines": {
    "node": "10",
    "npm": "6"
  },
  "private": true,
  "author": "Maxime Bréhin <maxime@delicious-insights.com>",
  "license": "No-License (see LICENSE file)",
  "scripts": {
    "commit": "commit",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:accessibility": "JEST_PUPPETEER_CONFIG=./accessibility/jest-puppeteer.config.js jest --runInBand --verbose --colors --config ./accessibility/jest.config.json",
    "test:cov": "npm test -- --coverage",
    "test:watch": "npm test -- --watch",
    "eject": "react-scripts eject"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier",
      "plugin:react/recommended",
      "plugin:import/errors",
      "plugin:jsx-a11y/recommended"
    ],
    "plugins": [
      "prettier",
      "react",
      "import",
      "jsx-a11y"
    ],
    "parser": "babel-eslint",
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "arrowParens": "always",
          "singleQuote": true,
          "trailingComma": "es5",
          "semi": false
        }
      ],
      "no-irregular-whitespace": 0
    },
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [
            "jest/"
          ]
        }
      }
    },
    "globals": {
      "page": true,
      "browser": true,
      "jestPuppeteer": true
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "./git-hooks/pre-push.js",
      "pre-commit": "./git-hooks/pre-commit.js && precise-commits"
    }
  },
  "jest": {
    "coverageReporters": [
      "json-summary"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 0,
        "statements": 0,
        "functions": 0,
        "branches": 0
      }
    }
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  },
  "dependencies": {
    "@material-ui/core": "^3.0.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-scripts": "next",
    "tone": "^0.12.80",
    "typeface-roboto": "0.0.54"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.1",
    "@commitlint/config-conventional": "^7.1.1",
    "@commitlint/prompt-cli": "^7.1.1",
    "axe-core": "^3.1.1",
    "babel-preset-env": "^1.7.0",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.0.1",
    "jest-coverage-ratchet": "^0.2.3",
    "jest-puppeteer": "^3.3.1",
    "precise-commits": "^1.0.2",
    "prettier": "^1.14.2",
    "puppeteer": "^1.7.0",
    "react-test-renderer": "^16.5.0",
    "serve": "^10.0.0"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">0.25%",
      "not op_mini all",
      "ie 11"
    ]
  }
}
